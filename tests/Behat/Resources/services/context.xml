<?xml version="1.0" encoding="UTF-8" ?>

<container xmlns="http://symfony.com/schema/dic/services" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <defaults public="true" />

        <service id="tests.prometee.sylius_payum_monetico_plugin.behat.context.setup.monetico"
                 class="Tests\Prometee\SyliusPayumMoneticoPlugin\Behat\Context\Setup\MoneticoContext">
            <argument type="service" id="sylius.behat.shared_storage" />
            <argument type="service" id="sylius.repository.payment_method"/>
            <argument type="service" id="sylius.fixture.example_factory.payment_method"/>
            <argument type="service" id="sylius.manager.payment_method"/>
        </service>

        <service id="tests.prometee.sylius_payum_monetico_plugin.behat.context.ui.admin.managing_payment_methods"
                 class="Tests\Prometee\SyliusPayumMoneticoPlugin\Behat\Context\Ui\Admin\ManagingPaymentMethodsContext">
            <argument type="service" id="tests.prometee.sylius_payum_monetico_plugin.behat.page.admin.payment_method.create" />
        </service>

        <service id="tests.prometee.sylius_payum_monetico_plugin.behat.context.ui.shop_monetico"
                 class="Tests\Prometee\SyliusPayumMoneticoPlugin\Behat\Context\Ui\Shop\MoneticoShopContext">
            <argument type="service" id="sylius.behat.page.shop.checkout.complete"/>
            <argument type="service" id="sylius.behat.page.shop.order.show"/>
            <argument type="service" id="tests.prometee.sylius_payum_monetico_plugin.behat.page_checkout.external"/>
        </service>

    </services>
</container>
